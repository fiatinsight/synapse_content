<%= simple_form_for [SynapseContent::ContentBlock.new] do |f| %>
  <%= f.input :publishable_type, as: :hidden, input_html: { value: params[:publishable_type] } %>
  <%= f.input :publishable_id, as: :hidden, input_html: { value: params[:publishable_id] } %>
  <%#= f.input :position, as: :hidden, input_html: { value: 0 } %>
  <div class="row justify-content-center">
    <div class="col-12">
      <p class="desc">What type of content would you like to add?</p>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= f.input :block_type, label: false, collection: SynapseContent::ContentBlock.block_types.keys.map { |w| [w.humanize, w] }, prompt: "Select type", wrapper_html: { class: 'col-12' } %>
  </div>
  <div class="row justify-content-center">
    <div class="col-12">
      <%= f.button :button, type: :submit, class: 'btn btn-secondary' do %>Add block<% end %>
    </div>
  </div>
<% end %>
